<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.resslen.projektbdio.ExamActivity">

    <Button
        android:id="@+id/bCreateExam"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:text="Utwórz Egzamin"
        android:onClick="clickCreateButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="147dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bManageExam"
        android:layout_width="209dp"
        android:layout_height="39dp"
        android:text="Zarzadzanie Egzaminem"
        android:onClick="clickManagetExamButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/bShowExam3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bShowExam3"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/bShowExam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyświetl Egzaminy"
        android:onClick="clickShowExamButton"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/bCreateExam"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bEditExam"
        app:layout_constraintVertical_bias="0.476"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/bCreateExam" />

</android.support.constraint.ConstraintLayout>
