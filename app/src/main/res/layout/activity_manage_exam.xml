<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.resslen.projektbdio.ManageExamActivity">


    <EditText
        android:id="@+id/EtChangeNameExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Podaj Nazwe Egzaminu"
        android:layout_marginTop="62dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/button"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:text="Edytuj Klucz"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bEditExam"
        app:layout_constraintLeft_toLeftOf="@+id/bEditExam" />

    <Button
        android:id="@+id/bEditExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edytuj Egzamin"
        android:onClick="clickEditExam"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/EtChangeNameExam" />

    <Button
        android:id="@+id/bDeleteExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usun Egzamin"

        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="@+id/button"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zarzadzaj Egzaminem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintHorizontal_bias="0.502" />
</android.support.constraint.ConstraintLayout>
